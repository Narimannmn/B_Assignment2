<!DOCTYPE html>
<html lang="en">
<%- include('head') %>
<body>
<%- include('navbar') %>
<section id="bdy2">
    <h1 class="mx-auto w-100 text-center">
        <%= title %>
    </h1>
    <div class="container">
        <div class="row" id="toursContainer">
            <% tours.forEach(tour => { %>
                <div class="col-md-6 col-lg-4" style="margin-bottom: 25px;">
                    <a href="/destination/<%= tour._id %>" style="color: black; text-decoration: none;">
                        <div class="card">
                            <img src="<%= tour.img %>" width="100%" class="img-fluid">
                            <div class="card-body">
                                <h5 class="card-title"><%= tour.city %></h5>
                                <p><%= tour.country %></p>
                            </div>
                            <% if(title === "Added Tours") {%>
                            <form action="/history/mytours/<%= tour.id %>" method="post">
                                <button class="btn btn-danger delete-btn" data-tourid="${id}">DELETE</button>
                            </form>
                            <% } %>
                            <% if(title === "Viewed tours") {%>
                            <form action="/history/viewed/<%= tour.id %>" method="post">
                                <button id="addToCartBtn" class="btn btn-primary">Add to profile</button>
                            </form>
                            <% } %>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
    </div>
</section>

<%- include('footer') %>
</body>
</html>